using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class NPC_Movement : MonoBehaviour{

    public bool collide = false;
    float front_direction = 4;
    float back_direction = 8;
    float speed = 1;


void start(){

}
void update(){
  if(OnCollisionEnter2D){
    collide = true;
  }
  else{
    collide = false;
  }

}
  void FixedUpdate(){
    if(collide == false){
      Instantiate(front_direction[Random.Range(0, front_direction.length)])
      if(front_direction = 1){
        transform.position.y = transform.prosition.y +speed;
      }
      if(front_direction = 2){
        transform.position.y = transform.prosition.y +speed;
      }
      if(front_direction = 3){
        transform.position.x = transform.prosition.x -speed;
        transform.position.y = transform.prosition.y +speed;

      }
      if(front_direction = 4){
        transform.position.x = transform.prosition.x +speed;
        transform.position.y = transform.prosition.y +speed;
      }
    }
    if(collide == true){
      Instantiate(back_direction[Random.Range(0, back_direction.length)])
      if(front_direction = 1){
        transform.position.y = transform.prosition.y -speed;
      }
      if(front_direction = 2){
        transform.position.y = transform.prosition.y -speed;
      }
      if(front_direction = 3){
        transform.position.y = transform.prosition.y -speed;
      }
      if(front_direction = 4){
        transform.position.y = transform.prosition.y -speed;
      }
      if(front_direction = 5){
        transform.position.x = transform.prosition.x -speed;
        transform.rotate(90,0,0,Space.Self);
      }
      if(front_direction = 6){
        transform.position.x = transform.prosition.x -speed;
        transform.position.y = transform.prosition.y -speed;
      }
      if(front_direction = 7){
          transform.position.x = transform.prosition.x +speed;
          transform.rotate(-90,0,0,Space.Self);
      }
      if(front_direction = 8){
        transform.position.x = transform.prosition.x +speed;
        transform.position.y = transform.prosition.y -speed;
      }
    }

  }

}
}
